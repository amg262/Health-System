@page
@model IS_Proj_HIT.CreateModelPointOfOrigin

@{
    ViewData["Title"] = "Create Point of Origin";
}

<h1>Create Point of Origin</h1>

<h4>PointOfOrigin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
