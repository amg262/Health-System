@page
@model IS_Proj_HIT.EditModelFacility

@{
    ViewData["Title"] = "Edit Facility";
}

<h1>Edit Facility</h1>

<h4>Facility</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Facility.FacilityId" />
            <div class="form-group">
                <label asp-for="Facility.Name" class="control-label"></label>
                <input asp-for="Facility.Name" class="form-control" maxlength="100" />
                <span asp-validation-for="Facility.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Facility.Description" class="control-label"></label>
                <input asp-for="Facility.Description" class="form-control" />
                <span asp-validation-for="Facility.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Facility.AddressId" class="control-label"></label>
                <select asp-for="Facility.AddressId" class="form-control" asp-items="ViewBag.AddressId"></select>
                <span asp-validation-for="Facility.AddressId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Facility.Phone" class="control-label"></label>
                <input asp-for="Facility.Phone" class="form-control" maxlength="10" />
                <span asp-validation-for="Facility.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Facility.LastModified" class="control-label"></label>
                <input asp-for="Facility.LastModified" class="form-control" readonly />
                <span asp-validation-for="Facility.LastModified" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
