@page
@model IS_Proj_HIT.EditModelProgram

@{
    ViewData["Title"] = "Edit Programs";
}

<h1>Edit Programs</h1>

<h4>Program</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Program.ProgramId" />
            <div class="form-group">
                <label asp-for="Program.Name" class="control-label"></label>
                <input asp-for="Program.Name" class="form-control" maxlength="255"/>
                <span asp-validation-for="Program.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Program.IsActive" class="control-label"></label>
                <input asp-for="Program.IsActive" class="form-control" />
                <span asp-validation-for="Program.IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
