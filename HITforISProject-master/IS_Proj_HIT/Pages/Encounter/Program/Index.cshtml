@page
@model IS_Proj_HIT.IndexModelProgram

@{
    ViewData["Title"] = "Programs";
}
<div class="row my-3">
<h3>
    <a class="btn btn-primary" asp-controller="Administration" asp-action="EncounterDataEntry">
        <i class="fa fa-arrow-left "></i>
        </a>
      Programs
</h3>
</div>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Program[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Program[0].IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Program) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ProgramId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ProgramId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ProgramId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
