@page
@model IS_Proj_HIT.IndexModelPainRating

@{
    ViewData["Title"] = "Pain Rating";
}

<div class="row my-3">
<h3>
     <a class="btn btn-primary" asp-controller="Administration" asp-action="DataEntry">
            <i class="fa fa-arrow-left "></i>
        </a>
      Pain Rating
</h3>
</div>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PainRating[0].Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PainRating[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PainRating[0].LastModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PainRating[0].PainParameter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PainRating)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PainParameter.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.PainRatingId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.PainRatingId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.PainRatingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
