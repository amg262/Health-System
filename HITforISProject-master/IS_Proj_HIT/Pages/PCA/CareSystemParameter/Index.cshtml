@page
@model IS_Proj_HIT.IndexModelCareSystemParameter

@{
    ViewData["Title"] = "Care System Parameter";
}
<div class="row my-3">
<h3>
     <a class="btn btn-primary" asp-controller="Administration" asp-action="DataEntry">
            <i class="fa fa-arrow-left "></i>
        </a>
       Care System Parameter
</h3>
</div>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CareSystemParameter[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CareSystemParameter[0].NormalLimitsDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CareSystemParameter[0].LastModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CareSystemParameter[0].CareSystemType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CareSystemParameter)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NormalLimitsDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CareSystemType.Name)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.CareSystemParameterId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.CareSystemParameterId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.CareSystemParameterId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
