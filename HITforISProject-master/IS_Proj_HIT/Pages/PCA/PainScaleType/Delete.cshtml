@page
@model IS_Proj_HIT.DeleteModelPainScaleType

@{
    ViewData["Title"] = "Delete Pain Scale Type";
}

<h1>Delete Pain Scale Type</h1>

<h3>@ViewData["RegularMessage"]</h3>
<h3 class="error">@ViewData["ErrorMessage"]</h3>

<div>
    <h4>PainScaleType</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PainScaleType.PainScaleTypeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PainScaleType.PainScaleTypeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PainScaleType.UseDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PainScaleType.UseDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PainScaleType.LastModified)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PainScaleType.LastModified)
        </dd>
    </dl>

    @if (Model.PainScaleType.PainParameters.Any())
    {
        <h4>This will also delete the following Pain Parameter(s)</h4>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PainScaleType.PainParameters.First().ParameterName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PainScaleType.PainParameters.First().Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PainScaleType.PainParameters.First().LastModified)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PainScaleType.PainParameters.First().PainScaleType)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PainScaleType.PainParameters)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParameterName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastModified)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PainScaleType.PainScaleTypeName)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

        <form method="post">
            <input type="hidden" asp-for="PainScaleType.PainScaleTypeId" />
            <input type="submit" value="Delete" class="btn btn-danger" onclick="if (!confirm('Are you sure you want to delete the item(s)?')) return false;" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
