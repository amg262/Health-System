@page
@model IS_Proj_HIT.DeleteModelPainParameter

@{
    ViewData["Title"] = "Delete Pain Parameter";
}

<h1>Delete Pain Parameter</h1>

<h3>@ViewData["RegularMessage"]</h3>
<h3 class="error">@ViewData["ErrorMessage"]</h3>

<div>
    <h4>PainParameter</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PainParameter.ParameterName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PainParameter.ParameterName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PainParameter.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PainParameter.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PainParameter.LastModified)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PainParameter.LastModified)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PainParameter.PainScaleType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PainParameter.PainScaleType.PainScaleTypeName)
        </dd>
    </dl>

    @if (Model.PainParameter.PainRatings.Any())
    {
        <h4>This will also delete the following Pain Rating(s)</h4>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PainParameter.PainRatings.First().Value)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PainParameter.PainRatings.First().Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PainParameter.PainRatings.First().LastModified)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PainParameter.PainRatings.First().PainParameter)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PainParameter.PainRatings)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Value)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastModified)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PainParameter.Description)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <form method="post">
        <input type="hidden" asp-for="PainParameter.PainParameterId" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="if (!confirm('Are you sure you want to delete the item(s)?')) return false;" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
