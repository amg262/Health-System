@page
@model IS_Proj_HIT.IndexModelPainParameter

@{
    ViewData["Title"] = "Pain Parameter";
}

<div class="row my-3">
<h3>
     <a class="btn btn-primary" asp-controller="Administration" asp-action="DataEntry">
            <i class="fa fa-arrow-left "></i>
        </a>
      Pain Parameter
</h3>
</div>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PainParameter[0].ParameterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PainParameter[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PainParameter[0].LastModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PainParameter[0].PainScaleType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PainParameter)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ParameterName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PainScaleType.PainScaleTypeName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.PainParameterId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.PainParameterId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.PainParameterId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
