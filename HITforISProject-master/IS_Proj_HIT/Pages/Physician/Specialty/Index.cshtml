@page
@model IS_Proj_HIT.IndexModelSpecialty

@{
    ViewData["Title"] = "Specialty Data Entry";
}

<div class="row my-3">
<h3>
    <a class="btn btn-primary" asp-controller="Administration" asp-action="PhysicianDataEntry">
        <i class="fa fa-arrow-left "></i>
    </a>
   Specialty
</h3>
</div>


<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Specialty[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialty[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialty[0].LastModified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Specialty)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.SpecialtyId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.SpecialtyId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.SpecialtyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
