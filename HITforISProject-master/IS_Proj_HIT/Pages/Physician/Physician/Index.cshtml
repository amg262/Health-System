@page
@model IS_Proj_HIT.IndexModelPhysician

@{
    ViewData["Title"] = "Physician Data Entry";
}
<div class="row my-3">
<h3>
    <a class="btn btn-primary" asp-controller="Administration" asp-action="PhysicianDataEntry">
        <i class="fa fa-arrow-left "></i>
    </a>
    Physician
</h3>
</div>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Physician[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Physician[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Physician[0].Credentials)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Physician[0].License)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Physician[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Physician[0].EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Physician[0].ProviderStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Physician[0].LastModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Physician[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Physician[0].ProviderType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Physician[0].Specialty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Physician)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credentials)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.License)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProviderStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.Address1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProviderType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialty.Name)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.PhysicianId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.PhysicianId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.PhysicianId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
