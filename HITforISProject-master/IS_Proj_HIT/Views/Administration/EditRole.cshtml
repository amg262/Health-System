@model IS_Proj_HIT.ViewModels.EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}
<div class="row my-3">
<h3>
    <a class="btn btn-primary" asp-action="Index">
        <i class="fa fa-arrow-left "></i>
    </a>
    Edit Role
</h3>
</div>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-outline-primary">Return To Administration Tools</a>
        </div>
    </div>
</form>

<div class="card">
    <div class="card-header">
        <h3>Users in this role</h3>
        <a asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleId="@Model.Id"
           class="btn btn-primary text-white" style="width:auto">Add or Remove Users</a>

    </div> 
    @*<div class="card-body">*@
        @if (Model.Users.Any())
        {
            <table class="table table-striped">
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user</td>
                        </tr>
                    }

                </tbody>
            </table>
           
        }
        else
        {
            <h5 class="card-title">None at the moment</h5>
        }
    @*</div>*@
    <div class="card-footer">
        <a asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleId="@Model.Id" 
           class="btn btn-primary text-white" style="width:auto">Add or Remove Users</a>
    </div>
</div>

