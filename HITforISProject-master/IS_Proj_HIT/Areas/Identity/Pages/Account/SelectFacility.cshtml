@page
@model SelectFacilityModel

@{
    ViewData["Title"] = "Select Facility";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-5">
        <section>
            <form method="post"> 
                @foreach (var facility in Model.Facilities)
                {
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="@facility.Name" asp-for="Input.FacilityName" title="@facility.Name" />
                </div>
                }
            </form>
        </section>
    </div>
</div>